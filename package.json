  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test:unit": "NODE_ENV=test jest",
    "test:backend:features": "NODE_ENV=test cucumber-js -p backend",
    "test:features": "npm run test:backend:features",
    "test": "npm run test:unit && npm run test:features",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di"
  },
  "author": {
    "name": "Eduardo Esteban Álvarez Castañeda",
    "email": "soy@eduardoalvarez.dev",
    "url": "https://eduardoalvarez.dev"
  },
