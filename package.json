    "bodybuilder": "2.5.1",
    "bson": "6.2.0",
    "compression": "1.7.4",
    "connect-flash": "0.1.1",
    "cookie-parser": "1.4.6",
    "cookie-session": "2.1.0",
    "copy": "0.3.2",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "express-validator": "7.0.1",
    "glob": "10.3.10",
    "helmet": "7.1.0",
    "http-status": "1.7.3",
    "node-dependency-injection": "3.1.2",
    "nunjucks": "3.2.4",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "10.3.1",
    "@types/compression": "1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "1.4.6",
    "@types/cookie-session": "2.0.48",
    "@types/errorhandler": "1.5.3",
    "@types/express": "4.17.21",
    "@types/glob": "8.1.0",
    "@types/node": "20.11.13",
